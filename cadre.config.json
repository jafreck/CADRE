{
  "projectName": "cadre",
  "platform": "github",
  "repository": "jafreck/CADRE",
  "repoPath": ".",
  "baseBranch": "main",
  "issues": {
    "query": {
      "state": "open",
      "limit": 1000
    }
  },
  "branchTemplate": "cadre/issue-{issue}",
  "commits": {
    "conventional": true,
    "sign": false,
    "commitPerPhase": true,
    "squashBeforePR": false
  },
  "pullRequest": {
    "autoCreate": true,
    "draft": false,
    "labels": ["cadre-generated"],
    "reviewers": [],
    "linkIssue": true
  },
  "options": {
    "maxParallelIssues": 10,
    "maxParallelAgents": 4,
    "maxRetriesPerTask": 3,
    "tokenBudget": 500000,
    "perIssueTokenBudget": 100000,
    "dryRun": false,
    "resume": false,
    "invocationDelayMs": 0,
    "buildVerification": true,
    "testVerification": true
  },
  "commands": {
    "install": "npm install",
    "build": "npm run build",
    "test": "npx vitest run"
  },
  "copilot": {
    "cliCommand": "copilot",
    "model": "claude-sonnet-4.6",
    "timeout": 1800000
  },
  "environment": {
    "inheritShellPath": true,
    "extraPath": []
  },
  "dogfood": {
    "enabled": false,
    "minimumIssueLevel": "medium",
    "maxIssuesPerRun": 5
  },
  "notifications": {
    "enabled": false,
    "providers": [
      {
        "type": "webhook",
        "url": "${WEBHOOK_URL}",
        "events": ["issue.completed", "issue.failed"]
      },
      {
        "type": "slack",
        "webhookUrl": "${SLACK_WEBHOOK_URL}",
        "channel": "#cadre-notifications",
        "events": ["fleet.completed", "issue.failed"]
      },
      {
        "type": "log",
        "logFile": ".cadre/notifications.log"
      }
    ]
  }
}
